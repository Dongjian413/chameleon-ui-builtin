<c-page title="button" class=" cml-base cml-c-page">
  
    <c-scroller height="{{-1}}" class=" cml-base cml-c-scroller">
      <c-header title="button" class=" cml-base cml-c-header"></c-header>
      <view class="section-title  cml-base cml-view">
        <text class="section-title-text  cml-base cml-text">类型样式</text>
      </view>
      <view class="button-list  cml-base cml-view">
        <text class="button-text  cml-base cml-text">default/blue</text>
        <c-button bindonclick="_cmlEventProxy" data-eventonclick="testclick" class=" cml-base cml-c-button"></c-button>

        <text class="button-text  cml-base cml-text">disabled</text>
        <c-button type="blue" text="确定" disabled="{{true}}" bindonclick="_cmlEventProxy" data-eventonclick="testclick" class=" cml-base cml-c-button">
        </c-button>

        <text class="button-text  cml-base cml-text">orange</text>
        <c-button type="orange" text="确定" bindonclick="_cmlEventProxy" data-eventonclick="testclick" class=" cml-base cml-c-button">
        </c-button>

        <text class="button-text  cml-base cml-text">red && disabled</text>
        <c-button type="red" text="确定" disabled="{{true}}" bindonclick="_cmlEventProxy" data-eventonclick="testclick" class=" cml-base cml-c-button">
        </c-button>

        <text class="button-text  cml-base cml-text">green</text>
        <c-button type="green" text="确定" bindonclick="_cmlEventProxy" data-eventonclick="testclick" class=" cml-base cml-c-button">
        </c-button>
      </view>

      <view class="section-title  cml-base cml-view">
        <text class="section-title-text  cml-base cml-text">尺寸</text>
      </view>
      <view class="button-list  cml-base cml-view">
        <text class="button-text  cml-base cml-text">big</text>
        <c-button bindonclick="_cmlEventProxy" data-eventonclick="testclick" class=" cml-base cml-c-button"></c-button>

        <text class="button-text  cml-base cml-text">medium</text>
        <c-button type="orange" text="确定" size="medium" bindonclick="_cmlEventProxy" data-eventonclick="testclick" class=" cml-base cml-c-button">
        </c-button>

        <text class="button-text  cml-base cml-text">small</text>
        <c-button type="red" text="确定" size="small" disabled="{{true}}" bindonclick="_cmlEventProxy" data-eventonclick="testclick" class=" cml-base cml-c-button">
        </c-button>
      </view>
    </c-scroller>
  
</c-page>