<template>
  <origin-image
      style="{{computedStyle}}"
      src="{{src}}"
      bindload="onload"
      binderror="onerror"
  >
  </origin-image>
</template>
<script>
import cml from 'chameleon-api'
 class Image implements ImageInterface {
    props = {
      src: {
        type: String,
        default: ''
      },
      cstyle: {
        type: String,
        default: ''
      }
    }
    computed = {
      computedStyle() {
        // props 必须经过计算属性，否则没有经过 cpx 转换
        return this.cstyle
      }
    }
    methods = {
      onload (e) {
        this.$cmlEmit('load', {
          ...e.detail
        })
      },
      onerror (e) {
        this.$cmlEmit('error', {
          ...e.detail
        })
      }
    }
  }
  export default new Image();
</script>
<style scoped>
</style>
<script cml-type="json">
{
}
</script>